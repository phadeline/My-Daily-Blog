<h2>Login</h2>

<form class="form login-form">
  <div class="form-group">
    <label for="email-login">email:</label>
    <input class="form-input" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">login</button>
  </div>
</form>

<div class="login-card card row d-flex">
  <h2 class="page-title my-2">Signup!</h2>
  <form class="form signup-form">
    <div class="form-group">
      <label
        for="username-signup"
        class="form-label text-start"
      >Username:</label>
      <input
        class="form-input form-control m-2"
        type="text"
        id="username-signup"
        placeholder="username"
      />
    </div>
    <div class="form-group">
      <label
        for="password-signup"
        class="form-label text-start"
      >Password:</label>
      <input
        class="form-input m-2 form-control"
        type="password"
        placeholder="password"
        id="password-signup"
      />
    </div>
    <div class="form-group">
      <button class="btn btn-primary m-2" type="submit">signup</button>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>